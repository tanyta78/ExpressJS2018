<h1>Welcome to SoftUni Wiki!</h1>
<section>
	<h2>Edit article
		{{#if currentUser}}
			{{#if currentUser.isAdmin}}
		<div class="controls">
			<a href="/article/lock/{{id}}">Lock article</a>
			<a href="/article/unlock/{{id}}">Unlock article</a>
		</div>
			{{/if}}
		{{/if}}
	</h2>
	<div class="spacer">
		 <form action="/article/edit/{{id}}" method="POST">
			<label>Article title</label>
			<h3>{{title}}</h3>
			<label>Content</label>
			<textarea name="content" value="{{content}}"></textarea>
            <input type="submit" value="Submit">
		</form>
	</div>
</section>